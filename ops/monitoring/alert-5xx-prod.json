{
  "displayName": "apex-prod-api 5xx ratio high",
  "combiner": "OR",
  "conditions": [
    {
      "displayName": "Cloud Run 5xx ratio > 1% (5m)",
      "conditionThreshold": {
        "filter": "resource.type=\"cloud_run_revision\" AND resource.label.\"service_name\"=\"apex-prod-api\" AND metric.type=\"run.googleapis.com/request_count\" AND metric.label.\"response_code_class\"=\"5xx\"",
        "aggregations": [
          {
            "alignmentPeriod": "300s",
            "perSeriesAligner": "ALIGN_RATE",
            "crossSeriesReducer": "REDUCE_SUM"
          }
        ],
        "comparison": "COMPARISON_GT",
        "thresholdValue": 1,
        "duration": "300s",
        "trigger": { "count": 1 }
      }
    }
  ],
  "enabled": true,
  "notificationChannels": [],
  "documentation": {
    "content": "Investigate latest revision, logs, and rollback if sustained >3% for 10m.",
    "mimeType": "text/markdown"
  }
}
